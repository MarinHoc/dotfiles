#!/bin/sh

# settings
setxkbmap -option caps:swapescape
xsetroot -cursor_name left_ptr
xset s off -dpms

# daemons
_() {
    pgrep -x "$1" > /dev/null ||
        { "$@" & }
}

_ dunst
_ mpd
_ sxhkd -m 1

# rice
tmp=~/.local/share/fonts

[ -f "$tmp/fonts.dir" ] &&
    xset +fp "$tmp"

tmp=~/.config/xres/main

[ -f "$tmp" ] &&
    xrdb -merge "$tmp"

wallpaper

# wm
bspc query -M > /dev/null 2>&1 ||
    exec bspwm > /tmp/bspwm.log 2>&1

# vim: ft=sh
