#!/bin/sh

die() {
    echo "$1" >&2
    exit 1
}

type stow > /dev/null ||
    die 'error : stow is needed to deploy'

case $1 in
    desktop) arg='chicken dunst fonts git gtk misc mpv music rofi shell ssh vim wm x';;
    phone)   arg='chicken misc shell ssh termux vim';;
    server)  arg='chicken misc shell ssh vim';;
    *)
        die "usage : ${0##*/} <desktop|phone|server>"
esac

for pkg in $arg; do
    stow -t ~ "$pkg"
done
