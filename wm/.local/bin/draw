#!/bin/sh
#
# draw - draw terminals

_() bspc config "$@"

border=$(_ border_width)

IFS=+x; set -- $(
    hacksaw          \
        -n           \
        -s "$border" \
        -c "$(_ focused_border_color)" 2> /dev/null
)

[ $# -eq 0 ] && exit

# make the newly spawned window floating & with the right geometry
bspc rule -a \* -o state=floating \
    rectangle="$(($1 - 2 * border))x$(($2 - 2 * border))+$3+$4"

st &
