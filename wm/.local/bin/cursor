#!/bin/sh
#
# teleport cursor

{ wattr xywh "$(pfw)"; wmp; } | {
    read -r x y w h
    read -r  mx  my

    # center if cursor isn't on the window
    [ \
        $((
            mx >= x && mx <= x + w &&
            my >= y && my <= y + h
         )) -eq 0 \
    ] &&
        wmp $((x + w / 2)) $((y + h / 2))
}
