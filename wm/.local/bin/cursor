#!/bin/sh
#
# cursor - bring cursor back on the focused window if it wasn't already

{ wmp; wattr xywhb "$(pfw)"; } | {
    read -r m_x m_y
    read -r x y w h b

    [ \
        $((
               m_x <= x + b
            || m_y <= y + b
            || m_x >= x + w + b
            || m_y >= y + h + b
        )) -eq 1 \
    ] &&
        wmp -a $((x + w / 2 + b)) $((y + h / 2 + b))
}
