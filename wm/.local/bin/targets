#!/bin/sh
#
# targets - list focused / unfocused windows

die() {
    printf '%s\n' "${1:-usage : ${0##*/} <focused|normal>}" >&2

    exit 1
}

query() {
    bspc query -N -n ".local.$1.!fullscreen.!hidden"
}

test "$1" || die

for arg; do
    case $arg in
        focused) query  'focused';;
        normal)  query '!focused';;
        *)
            die
    esac
done
