#!/bin/sh
#
# targets - list focused / unfocused windows

die() {
    printf '%s\n' "${1:-usage : ${0##*/} <focused|normal>}" >&2

    exit 1
}

_() bspc query -N -n ".local.$1.!fullscreen.!hidden"

for arg; do
    case $arg in
        focused) _  'focused';;
        normal)  _ '!focused';;
        *)
            die
    esac
done
