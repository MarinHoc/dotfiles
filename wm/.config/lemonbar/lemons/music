#!/bin/sh

while :; do
    mpc | {
        IFS= read -r  title
        IFS= read -r status

        case $status in
            *playing*)
                # shorten title if necessary
                [ $((${#title} > 45)) -eq 1 ] &&
                    title=$(printf '%.45s...' "$title")

                title=$(printf '%s\n' "$title" | sed 's|%|%%|g')
                ;;
            *) title='Not Playing'
        esac

        printf '%s\n' "mus î€‚%{O10}$title"
    }

    mpc idle player
done
