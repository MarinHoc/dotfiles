#!/bin/sh

xtitle -s |
    while read -r win; do
        cur=$(bspc query -D -d --names)

        # fallback
        win=${win:-Desktop}

        var="$cur - $win"

        # shorten current window title
        [ ${#var} -gt 45 ] &&
            var=$(printf '.45s...' "$var")

        echo "wks î€Œ $var"
    done
